<mvc:View
        controllerName="project001employee.controller.BaseController"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns="sap.m">


    <Table id="idBooksTable"
           items="{
			path: '/EMPLOYEESet',
            parameters: {
                $count: true
            },
			sorter: {
				path: 'Id'
			}
		}"
		   
           mode="SingleSelectLeft"
           growing="true"
           growingThreshold="10"
           >
        <headerToolbar>
            <Toolbar>
                <Button icon="sap-icon://add" text="Add new book" press="project001employee.controller.book.AddBook.onAdd"/>
                <Button icon="sap-icon://edit" text="Update book" press="project001employee.controller.book.EditBook.onUpdate"/>
                <ToolbarSpacer/>
                <SearchField id="searchField" width="50%" search="project001employee.controller.added_functionality.Filter.onFilterBooks"/>
                <Button icon="sap-icon://excel-attachment" press="project001employee.controller.added_functionality.ExportExcel.onExport"/> 
                <Button text="Show PDF Viewer" icon="sap-icon://process" press="project001employee.controller.added_functionality.showPDF.showPDF"/>
                <Button icon="sap-icon://delete" text="Delete book" press="project001employee.controller.book.DeleteBook.onDelete"/>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column>
                <Text text="{i18n>totBooks}"/>
            </Column>

            <Column>
                <Text text="{i18n>avBooks}"/>
            </Column>
            <Column>
                <Text text="{i18n>totBooks}"/>
            </Column>
     

        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectIdentifier
                            title="{Id}"/>
                            <!--text="{Id}"--> 
         
      
                    <Text text="{= parseInt(${Age}) }"/> 
                    <Text text="{Name}"/>
                   
                </cells>
            </ColumnListItem>
        </items>
    </Table>

</mvc:View>